<ui:UiWindow
    x:Class="FuzzyAlzheimerUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:FuzzyAlzheimerUI"
    mc:Ignorable="d"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    Height="300" Width="550"
    Title="Fuzzy Alzheimer Disease Diagnosis">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Нечітка діагностика хвороби Альцгеймера"
            Grid.Row="0"
            Icon="pack://application:,,,/Assets/applicationIcon-256.png">
            <ui:TitleBar.Header>
                <StackPanel
                    Margin="0,0,12,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ui:Button
                        x:Name="ThemeButton"
                        Appearance="Secondary"
                        Content="Тема"
                        Icon="DarkTheme20"
                        Click="ThemeButton_Click" />
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <Border
            Grid.Row="1"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8,8,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        Text="Результат тесту на втрату пам'яті"
                        VerticalAlignment="Center"/>

                    <ui:TextBox
                        x:Name="ML_Value"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,7,5"
                        PlaceholderText="0-10"
                        VerticalAlignment="Center"
                        PreviewTextInput="PreviewTextInputEvent"/>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        Text="Результат когнітивного тесту 1"
                        VerticalAlignment="Center"/>

                    <ui:TextBox
                        x:Name="CS1_Value"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5,7,5"
                        PlaceholderText="0-10"
                        VerticalAlignment="Center"
                        PreviewTextInput="PreviewTextInputEvent"/>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        Text="Результат когнітивного тесту 2"
                        VerticalAlignment="Center"/>

                    <ui:TextBox
                        x:Name="CS2_Value"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5,7,5"
                        PlaceholderText="0-10"
                        VerticalAlignment="Center"
                        PreviewTextInput="PreviewTextInputEvent"/>
                </Grid>

                <ui:Button
                    x:Name="AcceptButton"
                    Grid.Row="1"
                    Appearance="Primary"
                    Icon="ClipboardTask24"
                    HorizontalAlignment="Center"
                    Content="Підтвердити"
                    Click="AcceptButton_Click"/>

                <Border
                    Grid.Row="2"
                    Margin="0,5,0,0"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8,8,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="15,0,0,0"
                            Text="Чітке значення результату"
                            VerticalAlignment="Center"/>

                        <ui:TextBox
                            x:Name="Crisp_Value"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,5,7,5"
                            VerticalAlignment="Center"
                            PreviewTextInput="PreviewTextInputEvent"
                            IsEnabled="False"/>

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="15,0,0,0"
                            Text="Результат діагностики ризику хвороби Альцгеймера"
                            VerticalAlignment="Center"/>

                        <ui:TextBox
                            x:Name="Word_Value"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,5,7,5"
                            VerticalAlignment="Center"
                            PreviewTextInput="PreviewTextInputEvent"
                            IsEnabled="False"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ui:UiWindow>
